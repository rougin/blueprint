{
  "name": "rougin/blueprint",
  "description": "A bootstrap for PHP console projects.",
  "keywords": [ "blueprint", "generator", "php-console" ],
  "homepage": "https://roug.in/blueprint/",
  "license": "MIT",
  "authors":
  [
    {
      "email": "rougingutib@gmail.com",
      "homepage": "https://roug.in/",
      "name": "Rougin Gutib",
      "role": "Software Engineer"
    }
  ],
  "require":
  {
    "php": ">=5.3.0",
    "rougin/slytherin": "~0.9",
    "symfony/console": "*",
    "symfony/yaml": "*"
  },
  "require-dev":
  {
    "phpunit/phpunit": "*",
    "sanmai/phpunit-legacy-adapter": "*"
  },
  "bin":
  [
    "bin/blueprint"
  ],
  "autoload":
  {
    "psr-4":
    {
      "Rougin\\Blueprint\\": "src"
    }
  },
  "autoload-dev":
  {
    "psr-4":
    {
      "Rougin\\Blueprint\\": "tests"
    }
  },
  "scripts":
  {
    "analyze": "phpstan analyse",
    "restyle": "php-cs-fixer fix --config=phpstyle.php",
    "test": "phpunit"
  }
}
